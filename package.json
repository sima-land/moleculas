{
  "name": "@sima-land/moleculas",
  "type": "commonjs",
  "version": "0.0.0",
  "repository": "ssh://git@github.com:sima-land/moleculas.git",
  "author": "www.sima-land.ru team",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=16.15.1"
  },
  "scripts": {
    "prepare": "husky",
    "build": "npm run build:clean && npm run build:scripts && npm run build:assets && npm run build:package",
    "build:clean": "rm -rf build",
    "build:scripts": "tsc --project tsconfig.build.json",
    "build:assets": "node scripts/build-assets.mjs",
    "build:package": "cd build && npm pkg delete scripts.prepare && cd ..",
    "type-check": "tsc -p . --noEmit",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,css,scss}\" --log-level error",
    "prettier:check": "prettier \"./src/**/*.{js,jsx,ts,tsx,css,scss}\" --check"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "date-fns": "^4.1.0",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@krutoo/jest-css-modules-transform": "^0.0.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@sima-land/linters": "^5.0.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-transition-group": "^4.4.5",
    "babel-jest": "^29.6.4",
    "copyfiles": "^2.4.1",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "sass": "^1.77.8",
    "stylelint": "^15.11.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@sima-land/ui-nucleons": "^45.0.0-alpha.24",
    "@sima-land/ui-quarks": "^5.1.1",
    "react": "^17.0 || ^18.0"
  }
}
